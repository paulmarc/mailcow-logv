<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= dashboardTitle %></title>
  <link rel="icon" href="/favicon.ico" />

  <!-- CSRF token for forms/AJAX -->
  <meta name="csrf-token" content="<%= csrfToken %>" />

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <!-- Custom styles -->
  <link rel="stylesheet" href="/css/styles.css" />

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js" defer></script>
  <!-- Dashboard logic -->
  <script src="/js/dashboard.js" defer></script>
  <!-- Bootstrap bundle JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    defer
  ></script>
</head>
<body>
  <!-- Spinner Overlay -->
  <div id="spinnerOverlay" class="spinner-overlay">
  <div class="spinner-border" role="status">
    <span class="visually-hidden">Loadingâ€¦</span>
  </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><%= dashboardTitle %></a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item me-3">
            <label for="rangeSelect" class="visually-hidden">Select Range</label>
            <select
              id="rangeSelect"
              class="form-select form-select-sm"
              aria-label="Select report range"
            >
              <option value="day">Last Day</option>
              <option value="week">Last Week</option>
              <option value="month">Last Month</option>
            </select>
          </li>
          <li class="nav-item">
            <form method="POST" action="/logout" class="d-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="btn btn-outline-danger btn-sm" type="submit">
                Logout (<%= user.username %>)
              </button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container mt-4 position-relative">

    <div class="row">
      <!-- Hourly Traffic Chart -->
      <div class="col-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-header">Hourly Traffic</div>
          <div class="card-body">
            <canvas id="hourlyChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Top Hosts/Domains -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-header">Top Hosts/Domains</div>
          <div class="card-body">
            <ul id="hostsList" class="list-group"></ul>
          </div>
        </div>
      </div>

      <!-- Senders & Recipients -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-header">Senders &amp; Recipients</div>
          <div class="card-body">
            <h6>Senders</h6>
            <ul id="sendersList" class="list-group mb-3"></ul>
            <h6>Recipients</h6>
            <ul id="recipientsList" class="list-group"></ul>
          </div>
        </div>
      </div>

      <!-- Grand Totals -->
      <div class="col-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-header">Grand Totals</div>
          <div class="card-body">
            <p>
              Messages Received:
              <strong id="totalReceived">0</strong>
            </p>
            <p>
              Messages Sent:
              <strong id="totalSent">0</strong>
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
